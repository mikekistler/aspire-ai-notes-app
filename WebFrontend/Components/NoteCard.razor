<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Note.Title</h5>
        <h6 class="card-subtitle">
            @Note.UpdatedAt.ToShortDateString() 
            @if (Note.WasUpdated)
            {
                <text>(updated)</text>
            }
        </h6>
        <div class="card-text">
            @Note.Content
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Note Note { get; set; }
}
